$WorkDirectory /var/spool/rsyslog
*.* action(type="omfwd"
        target="<%= rediser_server %>"
        port="49558"
	protocol="tcp"
	template="StoreFileFormat"
        queue.FileName="omfwdrediser"
        queue.Type="LinkedList"
        queue.MaxDiskSpace="10m"
        queue.SaveOnShutdown="off"
        queue.TimeoutEnqueue="10"
        action.ResumeRetryCount="-1"
)

