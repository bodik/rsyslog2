#!/bin/sh
### BEGIN INIT INFO
# Provides:          telnetd
# Required-Start:    $remote_fs $network
# Required-Stop:     $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: telnetd
# Description:       This script starts and stops the telnetd
### END INIT INFO


BASE=<%= install_dir %>
NAME="telnetd"
PYTHON=`which python`
PIDFILE="/var/run/telnetd.pid"

. /puppet/metalib/lib.sh

cd $BASE || exit 1

killwaitpids() {
        PID="$@"
	if [ -z "$PID" ]; then return; fi
        kill -TERM $PID
        for i in `seq 1 30`; do
                ps -p $PID >/dev/null || break
                echo -n "."
                sleep 1
        done
}


case "$1" in

	start)
        	echo -n "Starting $NAME: "
		
		su -c "$PYTHON ${BASE}/telnetd.py 1>/dev/null 2>&1 &" <%= telnetd_user %>
	        echo $! > $PIDFILE
		iptables -t nat -I PREROUTING 1 -p tcp --dport 23 -j REDIRECT --to-port <%= telnetd_port %>

	        echo "done"
	;;
	stop)
	        echo -n "Stopping $NAME: "
		if [ -f $PIDFILE ]; then
		        killwaitpids $(cat $PIDFILE)
		        rm $PIDFILE
		fi
	        killwaitpids $(pgrep -f ${BASE}/telnetd.py)
		iptables -t nat -D PREROUTING -p tcp --dport 23 -j REDIRECT --to-port <%= telnetd_port %>
	        echo "done"
	;;
	status)
		pgrep -f ${BASE}/telnetd.py 1>/dev/null
                if [ $? -eq 0 ]; then
                        rreturn 0 "running"
                fi
		rreturn 1 "not running"
	;;
	*)
		ps faxu | grep ${BASE}/telnetd.py
		exit 1
	;;
esac

