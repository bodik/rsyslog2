NAME = rsyslog2-wheezy-metacloud
CONTEXT=[
  PUBLIC_IP="$NIC[IP]",
  SSH_KEY="$USER[SSH_KEY]",
  TARGET="xvdb",
  USER_DATA="#cloud-config
# see https://help.ubuntu.com/community/CloudInit

bootcmd:
- test -L /etc/motd && unlink /etc/motd || /bin/true

mounts:
- [xvdc,none,swap,sw,0,0]

packages: []

write_files:
- path: /etc/motd
  content: |2

       __  __      _         ____ _                 _
      |  \/  | ___| |_ __ _ / ___| | ___  _   _  __| |
      | |\/| |/ _ \ __/ _  | |   | |/ _ \| | | |/ _  |
      | |  | |  __/ |_ (_| | |___| | (_) | |_| | (_| |
      |_|  |_|\___|\__\____|\____|_|\___/ \____|\____|

      cloud@metacentrum.cz

runcmd:
- passwd -u root
- /bin/echo 'Instance is ready to use.' | wall
- touch /root/READY-TO-USE

" ]
CPU="4"
DISK=[
  DRIVER="tap2:tapdisk:aio:",
  IMAGE="METACLOUD-Debian-7.0-x86_64-0002@metacloud-dukan",
  IMAGE_UNAME="oneadmin",
  TARGET="xvda" ]
DISK=[
  DRIVER="tap2:tapdisk:aio:",
  SIZE="4096",
  TARGET="xvdc",
  TYPE="swap" ]
FEATURES=[
  ACPI="no" ]
MEMORY="4096"
NIC=[
  NETWORK_ID="1" ]
OS=[
  KERNEL="/opt/pv-grub/pv-grub-x86_64.gz" ]
RAW=[
  DATA="
extra = '(hd0,0)/boot/grub/menu.lst'
",
  TYPE="xen" ]
VCPU="4"
