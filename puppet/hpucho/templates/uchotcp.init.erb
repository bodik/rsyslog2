#!/bin/sh
### BEGIN INIT INFO
# Provides:          uchotcp
# Required-Start:    $remote_fs $network
# Required-Stop:     $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: uchotcp
# Description:       This script starts and stops the uchotcp
### END INIT INFO


BASE=<%= @install_dir %>
NAME="uchotcp"
PYTHON=`which python`
PIDFILE="/var/run/uchotcp.pid"

. /puppet/metalib/bin/lib.sh

cd $BASE || exit 1
ulimit -n 65535

killwaitpids() {
        PID="$@"
	if [ -z "$PID" ]; then return; fi
        kill -TERM $PID
        for i in `seq 1 30`; do
                ps -p $PID >/dev/null || break
                echo -n "."
                sleep 1
        done
}


case "$1" in

	start)
        	echo -n "Starting $NAME: "
		
		su -c "$PYTHON ${BASE}/uchotcp.py 1>>uchotcp-run.log 2>&1 &" <%= @uchotcp_user %>
	        echo $! > $PIDFILE

	        echo "done"
	;;
	stop)
	        echo -n "Stopping $NAME: "
		if [ -f $PIDFILE ]; then
		        killwaitpids $(cat $PIDFILE)
		        rm $PIDFILE
		fi
	        killwaitpids $(pgrep -f ${BASE}/uchotcp.py)
	        echo "done"
	;;
	status)
		pgrep -f ${BASE}/uchotcp.py 1>/dev/null
                if [ $? -eq 0 ]; then
                        rreturn 0 "running"
                fi
		rreturn 1 "not running"
	;;
	*)
		ps faxu | grep ${BASE}/uchotcp.py
		exit 1
	;;
esac

