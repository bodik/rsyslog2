#!/bin/sh
### BEGIN INIT INFO
# Provides:		warden_ca
# Required-Start:	$syslog $remote_fs
# Required-Stop:	$syslog $remote_fs
# Should-Start:	
# Should-Stop:
# Default-Start:	2 3 4 5
# Default-Stop:		0 1 6
# Short-Description:	warden_ca
# Description:		warden_Ca
### END INIT INFO

BASE=/opt/warden_ca
NAME="warden_ca_http"
PYTHON=`which python`
PIDFILE="${BASE}/warden_ca_http.pid"

. /lib/lsb/init-functions
killwaitpids() {
        PID="$@"
        if [ -z "$PID" ]; then return; fi
        kill -TERM $PID
        for i in `seq 1 30`; do
                ps -p $PID >/dev/null || break
                echo -n "."
                sleep 1
        done
}

cd $BASE || exit 1
case "$1" in
	start)
		echo -n "Starting $NAME: "
                su -c "$PYTHON ${BASE}/warden_ca_http.py 1>>warden_ca_http-run.log 2>&1 & echo \$! > $PIDFILE" <%= @ca_user %>
                echo "done"
	;;
	stop)
        	echo -n "Stopping $NAME: "
                if [ -f $PIDFILE ]; then
                        killwaitpids $(cat $PIDFILE)
                        rm $PIDFILE
                fi
                killwaitpids $(pgrep -f ${BASE}/warden_ca_http.py)
                echo "done"
        ;;
	log)
		tail -f warden_ca.log
	;;
	restart|force-reload)
		${0} stop
		${0} start
	;;
	status)
		status_of_proc "${BASE}/warden_ca_http.py" "$NAME" && exit 0 || exit $?
	;;
	*)
		echo "Usage: /etc/init.d/$NAME {start|stop|restart|force-reload|status}" >&2
		exit 1
	;;
esac

exit 0
