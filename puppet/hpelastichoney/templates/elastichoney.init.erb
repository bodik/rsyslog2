#!/bin/sh
### BEGIN INIT INFO
# Provides:          elastichoney
# Required-Start:    $remote_fs $network
# Required-Stop:     $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: elastichoney
# Description:       This script starts and stops
### END INIT INFO


BASE=<%= @install_dir %>
NAME="elastichoney"
PYTHON=`which python`
PIDFILE="${BASE}/elastichoney.pid"

. /lib/lsb/init-functions
killwaitpids() {
        PID="$@"
        if [ -z "$PID" ]; then return; fi
        kill -TERM $PID
        for i in `seq 1 30`; do
                ps -p $PID >/dev/null || break
                echo -n "."
                sleep 1
        done
}

cd $BASE || exit 1
case "$1" in

	start)
        	echo -n "Starting $NAME: "
		su -c "${BASE}/elastichoney -config=\"config.json\" -verbose=true  1>elastichoney-run.log 2>&1 & echo \$! > $PIDFILE" <%= @elastichoney_user %>
	        echo "done"
	;;
	stop)
	        echo -n "Stopping $NAME: "
		if [ -f $PIDFILE ]; then
		        killwaitpids $(cat $PIDFILE)
		        rm $PIDFILE
		fi
	        killwaitpids $(pgrep -f ${BASE}/elastichoney)
	        echo "done"
	;;
	status)
		status_of_proc "${BASE}/elastichoney" "$NAME" && exit 0 || exit $?
	;;
	*)
		ps faxu | grep ${BASE}/elastichoney
		exit 1
	;;
esac

