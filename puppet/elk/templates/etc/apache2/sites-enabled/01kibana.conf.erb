# File Managed by Puppet
<VirtualHost *:443>
	ServerAdmin webmaster@<%= @fqdn %>
	DocumentRoot /opt/kibana
	ServerName <%= @fqdn %>
	ErrorLog  /var/log/apache2/kibana-error_log
	CustomLog /var/log/apache2/kibana-access_log common

	SSLEngine on
	SSLCertificateKeyFile /etc/apache2/ssl/<%= @fqdn %>.key
	SSLCertificateFile /etc/apache2/ssl/<%= @fqdn %>.crt
	SSLCertificateChainFile /etc/apache2/ssl/cachain.pem

	<Directory /opt/kibana>
    		Require all granted
	</Directory>

        ProxyPass /head http://<%= @proxyto_real %>:39200
        ProxyPassReverse /head http://<%= @proxyto_real %>:39200

</VirtualHost>

